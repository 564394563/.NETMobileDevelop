<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/app_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="31.0dp" />
    <Button
        android:text="@string/get_timestamp_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/get_timestamp_button"
        android:enabled="false" />
    <Button
        android:text="@string/stop_timestamp_service_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stop_timestamp_service_button"
        android:enabled="false" />
    <Button
        android:text="@string/restart_timestamp_service_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/restart_timestamp_service_button"
        android:enabled="false" />
    <TextView
        android:text="Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_textview" />

</LinearLayout>
